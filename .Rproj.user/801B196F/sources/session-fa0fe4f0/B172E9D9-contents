\begin{frame}[shrink]
	\frametitle{\insertsubsection }
\begin{columns}[t]
\begin{column}{.45\textwidth}
\begin{block}{Des modes de calcul et des calendrier différents}
\begin{itemize}\scriptsize
              \item[\faSortAmountDown] {\bf RSA et Prime d'activité} : sous condition de ressources, trimestriels
              \item[\faHouseUser] {\bf Aides au logement} : sous condition de ressources, moyenne glissante sur les 11 derniers mois (données à la source)
              \item[\faUsersSlash] {\bf Allocation de soutien familiale} : forfaitaire, temporaire ou exige une décision de justice, supprimée en cas de remise en couple
\end{itemize}
\end{block}
\begin{itemize}
\item[$\Rightarrow$] {\bf variabilité, incertitudes \& opacité}
\end{itemize}

\end{column}

\begin{column}{.45\textwidth}
\begin{alertblock}{Intégration des prestations familiales dans les bases ressources RSA et PA}
\begin{itemize}\scriptsize
\item Allocations familales et complément familiale : {\bf 100 \%}
\item Aides au logement: forfait en fonction de la zone de résidence
\item ASF : {\bf 55 \%} depuis novembre 2023 
\item Pensions alimentaires: {\bf 100\%}
\end{itemize}
\end{alertblock}
\begin{itemize}
\item[$\Rightarrow$] {\bf Interactions contre-productives}
\end{itemize}

\end{column}
