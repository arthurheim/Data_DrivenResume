# Now do the DID
IVDIDRUC <- feols(RUC~1|timeToEvent^strataXc|D1:timeToJob~Z1.c:timeToJob,DB30%>% filter(timeToJob>=-12 & timeToJob<=12) %>% mutate(timeToJob=factor(timeToJob,exclude=c(-1)),T=ifelse(D==FALSE,1,0)),cluster=~strataXc) 


# simultaneous inference for positive value
SI.DID.pos <- glht(IVDIDRUC,paste(names(IVDIDRUC$coefficients)[str_detect(names(IVDIDY0$coefficients),"-")==FALSE],"=0"))

SI.DID.neg <- glht(IVDIDRUC)

negConf <-  left_join(tidy(SI.DID.neg),confint(SI.DID.neg,level=.95) %>% tidy()) %>% mutate(term=str_remove_all(contrast,"fit_D1:timeToJob") %>% as.numeric()) %>% mutate(Y="Causal effect",model="TSLS") %>% 
   mutate(Panel="Instrumented difference-in-differences") %>% filter(term<0)

DID <- left_join(tidy(SI.DID.pos),confint(SI.DID.pos,level=.95) %>% tidy()) %>% mutate(term=str_remove_all(contrast,"fit_D1:timeToJob") %>% as.numeric()) %>% mutate(Y="Causal effect",model="TSLS") %>% 
   mutate(Panel="Instrumented difference-in-differences") %>% bind_rows(.,negConf)

tidyDID <-modelplot(list("TSLS"=IVDIDRUC),draw=FALSE) %>% mutate(term=str_remove_all(term,"fit_D1:timeToJob") %>% as.numeric()) %>% 
  rename(point.conf.low=conf.low,point.conf.high=conf.high) %>% select(-estimate,-std.error) %>% left_join(.,DID)

