\subsection{Effets à la marge extensive et sélection: résultats de \citet{Heim2024}}

\frame{\frametitle{\insertsubsection}
\label{Results1}
\begin{block}{Les effets du programme sur l'emploi et la pauvreté monétaire}
\begin{itemize}\footnotesize
\item Principaux effets du programme \hyperlink{fig:DesIncomePosMain}{\beamergotobutton{Figure}}
\begin{enumerate}\scriptsize
  \item[\faLock] {\bf lock-in}: le programme ralenti les reprises d'emploi et de sortie de la pauvreté ;
  \item {\bf Pas d'effets en moyenne}: le programme n'a pas d'effet en moyenne sur l'emploi et le taux de pauvreté ;
  \item {\bf Pas d'effet du cycle économique}: En dehors de la période de lock-in, les effets et taux d'emploi sont les mêmes dans toutes les cohortes
  \item {\bf Hétérogénéité}: le programme réduit durablement l'emploi des mères qui avaient 1 enfant sans effets sur les revenus ;
\end{enumerate}
\item De l'importance d'un protocole randomisé
\begin{itemize}\scriptsize
\item Taux de {\bf recours moyen de 39\%}, passant de 28\% pour la première cohorte à 47\% pour la 4ème cohorte. \hyperlink{FirstStage}{\beamergotobutton{First stage}}

\item Le tirage au sort identifie les caractéristiques potentielles des participantes : Plus souvent inscrite à pôle emploi, moins diplômées et parmi les plus pauvres de l'échantillon.
\item Modèles en double différences modernes et doublement robustes excluent les résultats expérimentaux des intervalles de confiances ;
\item Sans tirage au sort, on {\bf conclu à tord à des effets positifs} sur l'emploi \hyperlink{fig:Naiveest}{\beamergotobutton{Figure}}
\end{itemize}
\end{itemize}
\end{block}

}



\subsection{Effets à la marge intensive}


<<computeParam,cache=TRUE>>=
ParameterElasticities <- edifis %>% group_by(nchild,couple,ref) %>% filter(WagePctSmic35<150) %>%   
  mutate(Bins=case_when(WagePctSmic35 <40                ~"Earned income bin:[0;40[",
                        WagePctSmic35 >=40 &WagePctSmic35 <50           ~"Earned income bin:[40;49[",
                        WagePctSmic35 >=50 &WagePctSmic35 <60           ~"Earned income bin:[50;60[",
                        WagePctSmic35 >=60 &WagePctSmic35 <80           ~"Earned income bin:[60;80[",
                        WagePctSmic35 >=80 &WagePctSmic35 <100          ~"Earned income bin:[80;100[",
                        WagePctSmic35 >=100 &WagePctSmic35 <110         ~"Earned income bin:[100;110[",
                        WagePctSmic35 >=110 &WagePctSmic35 <120         ~"Earned income bin:[110;120[",
                        WagePctSmic35 >=120 &WagePctSmic35 <150         ~"Earned income bin:[120;150[")) %>% ungroup() %>% group_by(nchild,couple,ref,Bins) %>% summarise(TIMI=mean(TIMI)) %>% ungroup() %>% mutate(TIMI=round(TIMI*100)) %>% 
  pivot_wider(id_cols = c(nchild,couple,ref),names_from = Bins,values_from = TIMI) %>% arrange(nchild,ref)%>% 
  select(nchild,couple,ref,`Earned income bin:[0;40[`,
         `Earned income bin:[40;49[`,
         `Earned income bin:[50;60[`,
         `Earned income bin:[60;80[`,
         `Earned income bin:[80;100[`,
         `Earned income bin:[100;110[`,
         `Earned income bin:[110;120[`,
         `Earned income bin:[120;150[`)#%>%

AverageSingle <- ParameterElasticities %>%  filter(couple=="Single") %>%mutate(ref="Average") %>% group_by(couple,ref) %>%  summarise_at(vars(all_of(names(ParameterElasticities)[str_detect(names(ParameterElasticities),"Earned")])),~mean(.x) %>% round())

tau.a <- ParameterElasticities %>% filter(couple=="Single") %>% summarise(tau=mean(`Earned income bin:[50;60[`) %>% round()) %>% unlist() %>% as.numeric()/100
tau.b <- ParameterElasticities %>% filter(couple=="Single") %>% summarise(tau=mean(`Earned income bin:[60;80[`)%>% round()) %>% unlist() %>% as.numeric()/100




pSmooth <- 3
qSmooth <- 4

Bunch1   <- POnpDensity("LabInc.Smic",filterVar="nchild",filterValue = "1",cov = "strataXc",p=pSmooth,q=qSmooth,data=DDBAnalysis %>% filter(timeToEvent>=BeginPost & timeToEvent<=maxT4))
Bunch2  <- POnpDensity("LabInc.Smic",filterVar="nchild",filterValue = "2",cov = "strataXc",p=pSmooth,q=qSmooth,data=DDBAnalysis %>% filter(timeToEvent>=BeginPost & timeToEvent<=maxT4))
Bunch3   <- POnpDensity("LabInc.Smic",filterVar="nchild",filterValue = "3+",cov = "strataXc",p=pSmooth,q=qSmooth,data=DDBAnalysis %>% filter(timeToEvent>=BeginPost & timeToEvent<=maxT4))
BunchFull <- POnpDensity("LabInc.Smic",cov = "strataXc",p=pSmooth,q=qSmooth,data=DDBAnalysis %>% filter(timeToEvent>=BeginPost & timeToEvent<=maxT4))

scaleY0child1 <- Bunch1$`Y(O)`$opt$scale
scaleY1child1 <- Bunch1$`Y(1)`$opt$scale
scaleY0child2 <- Bunch2$`Y(O)`$opt$scale
scaleY1child2 <- Bunch2$`Y(1)`$opt$scale
scaleY0child3 <- Bunch3$`Y(O)`$opt$scale
scaleY1child3 <- Bunch3$`Y(1)`$opt$scale
scaleY0child <- BunchFull$`Y(O)`$opt$scale
scaleY1child <- BunchFull$`Y(1)`$opt$scale

FullResultsIndiv <- bind_rows(Bunch1$DataFrame %>% mutate(Sample="1 child"),
                              Bunch2$DataFrame %>% mutate(Sample="2 children"),
                              Bunch3$DataFrame %>% mutate(Sample="3+ children"),
                              BunchFull$DataFrame %>% mutate(Sample="Full sample"),
) 


FullResultsIndiv <- FullResultsIndiv %>% full_join(.,EdifisReliance %>% filter(HHPrimaryIncome<=3000) %>% mutate(grid=WagePctSmic35/100,                                                                                               Sample=case_when(nchild=="1"~"1 child",
                                                                                                                                                                                                                                                        nchild=="2"~"2 children",
                                                                                                                                                                                                                                                        nchild=="3+"~"3+ children"))) %>% group_by(Sample) %>% 
  mutate(maxScale=ifelse(nchild=="3+",max(f_p+CI_r_q,na.rm = TRUE),max(f_p+.8*CI_r_q,na.rm = TRUE)),
         CashScaled = (AL+PA - min(AL+PA,na.rm=TRUE))/(max(AL+PA,na.rm=TRUE)-min(AL+PA,na.rm = TRUE)) *(maxScale-0)+0,
         ALScaled= (AL - min(AL,na.rm=TRUE))/(max(AL+PA,na.rm=TRUE)-min(AL+PA,na.rm = TRUE)) *(maxScale-0)+0,
  )
edifisScaled <- FullResultsIndiv %>% select(grid,nchild,CashScaled,ALScaled)%>% filter(!is.na(CashScaled))


