<<LoadReliance>>=
## now load the data
#  load("Reliance/Reliance_Data/Reliance_PhD_paper1_source042023.RData")
load(here("Reliance","Reliance_Data","Reliance_PhD_paper1_source062023Final.RData"))

# Inflation series from INSEE
IPVC <-
  read_delim(
      here("Reliance","Reliance_Data","INSEE","serie_001766924_09112023","valeurs_mensuelles.csv"),
      delim = ";",
      escape_double = FALSE,
      trim_ws = TRUE,
      skip = 3) %>% 
  rename(IPVC = `...2`) %>% 
  mutate(DTREFFRE = ymd(paste(`Période`, "-01", sep =""))) %>% 
  select(DTREFFRE, IPVC)

# Time series of national trust, confidence in the futur and so on for buisness cycle (not used in the end)
TrustHH <-
  read_delim(
      here("Reliance","Reliance_Data","INSEE","serie_001587668_09112023","valeurs_mensuelles.csv"),
      delim = ";",
      escape_double = FALSE,
      trim_ws = TRUE,
      skip = 3
  ) %>% rename(NatTrustHH = `...2`) %>% 
  mutate(DTREFFRE = ymd(paste(`Période`, "-01", sep =""))) %>% 
  select(DTREFFRE, NatTrustHH)

# Minimum wage levels
SMIC <-
  read_delim(
  here("Reliance","Reliance_Data","INSEE","serie_000879878_09112023","valeurs_mensuelles.csv"),
  delim = ";",
  escape_double = FALSE,
  trim_ws = TRUE,
  skip = 3
  ) %>% rename(Smic = `...2`) %>%
  mutate(DTREFFRE = ymd(paste(`Période`, "-01", sep = ""))) %>% 
  select(DTREFFRE, Smic)

## Remove the observation that was not officially single mother when randomised 

Reliance <- Reliance %>% filter(UniqueId!=1868)
BaselineClean <- BaselineClean %>% filter(UniqueId!=1868)


## Actualisation of all monetary variables using the INSEE PRICE CONSUMPTION INDEX for the 20% poor HH.
## Remove the outliers: arbitrarily all above the 99.9th percentile.

Reliance <- Reliance %>% ungroup() %>% left_join(., SMIC) %>%
             left_join(., TrustHH) %>% left_join(., IPVC) %>%
             mutate(RNUC = RUC) %>%
             mutate_at(vars(
               paste( c(names(Reliance)[str_detect(names(Reliance), "MT")],
                 "LABORINCOME",
                 "HHINC",
                 "INCOME" ,
                 "UNEMP_INSURANCE" ,
                 "incomeRUC",
                 "RUC",
                 "Smic",
                 "HHLABORINCOME"), sep = "," )), 
                ~ as.numeric(.x)* 100 / IPVC) %>%   # All monetary variables actualised in 2015 values using Consumer price index of the bottom quintile of income.
            mutate(
            TPA = as.numeric(as.character(TPA)),    # Child support as numeric
            ) %>%
            mutate(
            tte_3m = floor(timeToEvent / 3),
            tte_6m = floor(timeToEvent / 6),
            Poor = ifelse(RUC < 1140 * 100 / IPVC, 1, 0)
            ) %>% mutate_at(vars(youngest, oldest, meanChildAge),  ~ ifelse(. %in% c(-Inf, Inf, NaN), NA, .)) %>%
            mutate(
                   PhasesRegQ=case_when(
                   PhasesReg=="[-7 ; -1 [" ~1,
                   PhasesReg=="[ 0 ; 6 ["  ~2,
                   PhasesReg=="[ 6 ; 12 [" ~3,
                   PhasesReg=="[ 12 ; 18 ["~4,
                   PhasesReg=="[ 18 ; 24 ["~5,
                   PhasesReg=="[ 24 ; 30 ["~6),
            PhasesRegQ=factor(PhasesRegQ,
                              labels=c("[-7 ; -1 [" ,
                                       "[ 0 ; 6 ["  ,
                                       "[ 6 ; 12 [" ,
                                       "[ 12 ; 18 [",
                                       "[ 18 ; 24 [",
                                       "[ 24 ; 30 ["),)) %>%  # This variable is deliberately left with NA outside, and has no
  #omitted category. These are subsample identifiers used for stacked regressions. 
            mutate(PhasesRegReg=ifelse(timeToEvent==-1,"Ref (c=m)",PhasesReg) %>% 
                                    factor(.,
                                        levels=c("Ref (c=m)","[-7 ; -1 [" ,
                                                 "[ 0 ; 6 ["  ,
                                                 "[ 6 ; 12 [" ,
                                                 "[ 12 ; 18 [",
                                                 "[ 18 ; 24 [",
                                                 "[ 24 ; 30 ["),exclude=c("Ref (c=m)"))) %>% 
  group_by(UniqueId) %>% fill(PE,.direction="updown") %>%  #Fill block variables in missing obs
  fill(Senio,.direction="updown") %>% 
  fill(nchild,.direction="updown") %>% 
  fill(cohort,.direction="updown") %>% 
  fill(cohortid,.direction="updown") %>% 
  fill(strataXc,.direction="updown") %>%  ungroup() %>% 
  mutate(D1=ifelse(UniqueId==224,0,D1)) #One control unit as NA in D1.



BaselineClean <- BaselineClean %>% ungroup() %>%  left_join(.,SMIC) %>% left_join(.,TrustHH) %>% left_join(.,IPVC)%>% 
  mutate_at(vars(paste(c(names(Reliance)[str_detect(names(BaselineClean),"MT")],"LABORINCOME", "HHINC", "INCOME" ,"UNEMP_INSURANCE" ,"incomeRUC", "RUC", "Smic","HHLABORINCOME","MTRSAVER","MTPRESVE"),sep=",")),~as.numeric(.x)*100/IPVC) %>% 
  mutate_at(vars(paste(c(names(Reliance)[str_detect(names(BaselineClean),"MT")],"LABORINCOME", "HHINC", "INCOME" ,"UNEMP_INSURANCE" ,"incomeRUC", "RUC", "Smic","HHLABORINCOME","MTRSAVER","MTPRESVE"),sep=",")),~ifelse(.x>=quantile(.x,.999,na.rm=TRUE),quantile(.x,.999,na.rm=TRUE),.x)) %>% 
   mutate(TPA=as.numeric(as.character(TPA)),FirstChildGirl=ifelse(FirstChildGirl=="2",1,0))%>% mutate_at(vars(youngest,oldest,meanChildAge),~ifelse(. %in% c(-Inf,Inf,NaN),NA,.)) 


### Create dates' table
 

DatesC1C4 <- Reliance%>% ungroup()%>% filter(cohort>0 & cohort<=4) %>% select(DATERANDOMIZE,cohortid)%>% distinct()%>% filter(cohortid!="Pilot") %>% 
  mutate(DATERANDOMIZE=ymd(DATERANDOMIZE),
         Training_Start=case_when(cohortid=="Pilot"~
                                    paste("01-03-",
                                          str_remove_all("Cohort 2018","[:alpha:]"),sep=""),
                                  cohortid!="Pilot"~
           paste("01-03-",str_remove_all(cohortid,"[:alpha:]"),sep="")),
         Training_Start=dmy(str_remove_all(Training_Start,"[:blank:]")),
         Training_End=Training_Start+years(1))%>%
 mutate(TimeToStart=as.numeric(round(difftime(Training_Start,DATERANDOMIZE,units="days")/30.5)),
                                                             TimeToEnd=as.numeric(round(difftime(Training_End,DATERANDOMIZE,units="days")/30.5)),
                                                                  TimeToRandom=as.numeric(round(difftime(dmy("01-01-2017"),DATERANDOMIZE,units="days")/30.5)),
                                                                    group=case_when(cohortid=="Cohort 2018"~12,
                                                                                    cohortid=="Cohort 2019"~20,
                                                                                    cohortid=="Cohort 2020"~33,
                                                                                    cohortid=="Cohort 2021"~46,))%>% 
   mutate(TimeRecruiting=round(as.numeric((Training_Start-DATERANDOMIZE)/30)))






### Database for baseline variables 

B0 <- BaselineClean %>% mutate(TimeSitFam=difftime(DTREFFRE,DDSITFAM,"weeks") %>% as.numeric()/52) %>%
  mutate(School3=case_when(Schooling %in% c("High school degree","Higher education","Vocational degree")~"Higher education",Schooling %in% c("Middle school diploma","No education","Other training","Some Middle school")~"Low education",TRUE~"Unknown") %>% as.factor(.)) %>% 
  select(UniqueId,
                                      cohort,cohortid,strataXc,Encouragement,Treatment,D1,Z1,
                               AVISSESI,`Caseworker's orientation`,principal_strata,School3,
                                      DistReliance, #Distance 
                                      TimeSitFam,NECHALOG,NBENLEFA,NBENFCHA,NBEN0A2C,TPA,French,Sexe,
            childrenMix,youngest,oldest,meanChildAge,AGE,RUC,YMTBRU,LABORINCOME,HHINC,INCOME,out_RSA,out_RSAtight,income_pos,PPA,Employment,incomeRUC,AF,CF,APL,ASF,AAH,PAJE,MTRSAVER,MTPRESVE,TRIMRSA,SESIDummy,lat,lng,NatTrustHH,NBEN0A2C,HHLABORINCOME,TOPGRO,
NBEN3A5C,TRIMPPA) %>% 
  mutate_at(vars(youngest,oldest,meanChildAge,DistReliance),~ifelse(is.na(.x),mean(.x,na.rm=TRUE),.x)) %>% # replace children age mean for those provisionally without their children. Also for distance.
  mutate(AgeAt1Birth=AGE-oldest,
         NBEN0A2C=ifelse(NBEN0A2C>0,1,0),
         NBEN3A5C=ifelse(NBEN3A5C>0,1,0),
         Share16=ifelse(oldest>=16,1,0),
         NECHALOG=as.numeric(NECHALOG)) 
  
  #%>% mutate(TimeSitFam=difftime(DTREFFRE,DDSITFAM,"weeks") %>% as.numeric())

#B0 for the experimental sample only
B0E <- B0 %>% filter(!is.na(SESIDummy))


B0EC <- B0E %>% select(-c("TRIMRSA"   ,     "SESIDummy",      "lat"    ,        "lng" )) %>% 
  #select(-c(cohort,Encouragement,Treatment, AVISSESI,`Caseworker's orientation`,principal_strata,SESIDummy,lat,lng,NatTrustHH,childrenMix)) %>% 
  mutate_at(vars(Employment,out_RSAtight),~ifelse(.x==TRUE,1,0)) %>% 
  mutate_at(vars( "LABORINCOME",
                 "HHINC",
                 "INCOME" ,
                 "incomeRUC",
                 "RUC",
                 "YMTBRU",
                 "HHLABORINCOME",
                 "income_pos"),~ifelse(is.na(.x),0,.x)) 

B0EC <- B0EC %>% group_by(cohortid) %>% 
  mutate(French=ifelse(French==TRUE,1,0),
                       TRIMPPA=as.factor(TRIMPPA),
                         Sexe=ifelse(Sexe=="Woman",1,0),
                         Qyoungest=as.factor(ntile(youngest,4)),
                         Qoldest=as.factor(ntile(oldest,4)),
                         QMTPRESVE=as.factor(ntile(`MTPRESVE`,4)),
                         QYMTBRU=as.factor(ntile(YMTBRU,2)),
                         QmeanChildAge=as.factor(ntile(meanChildAge,4)),
                         Q3AgeAt1B=ntile(AgeAt1Birth,3),
                         QAGE=as.factor(ntile(AGE,4)),
                         QBRUC=as.factor(ntile(RUC,4)),
                         QHHINC=as.factor(ntile(HHINC,4)),
                         QincomeRUC=as.factor(ntile(incomeRUC,4)),
                         QTimeSitFam=as.factor(ntile(TimeSitFam,4)),
                         QDist1=ifelse(DistReliance<=quantile(DistReliance,.2,na.rm=TRUE),1,0),
         ASF=as.character(ASF)) %>% ungroup() %>% group_by(strataXc) %>% 
  ungroup() %>% 
  group_by(cohortid,strataXc) %>% mutate(MTRSAVER=as.numeric(MTRSAVER)) %>% #Center numerical vars 
mutate_at(vars(DistReliance,TimeSitFam:NBENFCHA,youngest:INCOME,incomeRUC,MTRSAVER:MTPRESVE,AgeAt1Birth),~as.numeric(.x)-mean(as.numeric(.x),na.rm=TRUE)) %>% ungroup() %>% mutate(ASF=as.numeric(ASF)) # We don't want ASF centered

toRename <- B0EC %>% select(DistReliance,TimeSitFam:NBENFCHA,youngest:INCOME,incomeRUC,MTRSAVER:MTPRESVE,AgeAt1Birth,Sexe,income_pos, out_RSA, PPA, Employment, out_RSAtight, TPA, AF, CF, APL, ASF, AAH, PAJE, NBEN0A2C,Share16, NBEN3A5C,French,TRIMPPA,HHLABORINCOME) 
toRename <- names(toRename)

#Rename variables with B0_ prefix    
names(B0EC)[names(B0EC) %in% toRename] <- 
  paste("B0_", names(B0EC)[names(B0EC) %in% toRename],sep="")

# In case of MAP
# [*Quartiers prioritaires de la ville*: Coeur De Ville, Haussonville - Les Nations, La Californie, Les Provinces, Mouzimpré, Plateau De Haye - Champ Le Boeuf, Plateau De Haye Nancy - Maxéville, Saint Michel Jéricho - Grands moulins.]

# Define vectors of variable names and what they do

# Covariates take all the non-id variables created in B0EC
Covariates <- names(B0EC)[names(B0EC) %in% c ("UniqueId" ,"cohort", "cohortid" ,  "strataXc" ,"Encouragement",
                                "Treatment","AVISSESI","Caseworker's orientation","principal_strata","Z1","D1")==FALSE]
# Positive labour income, Disposable income per capita, total disposable income with transfers, Receiving RSA, receiving in-work benefits
# RNUC is disposable income per capita unadjusted for inflation. HHLABORINCOME is the household labour income used in PPA and RSA
# Poor is a dummy for RUC lower than the 2019 poverty line. More recent series are unavailable so we only convert it in 2015€ like other 
# monetary units but do not account for growth of the median income. 

MainOutcomes <- c("income_pos","RUC","incomeRUC","out_RSA","PPA","RNUC","HHLABORINCOME","Poor")

## total household income including non-labour incomes, individual labour income, employment based on PCS, 
# Number of children in custody used for Family benefits, Number of children, legal definition (used for RSA and PA in particular), 
# number of resident children, Dummy for children under 2, dummy for being pregnant.
SecOutcomes <- c("HHINC","LABORINCOME","Employment","out_RSAtight","MTPRESVE","INCOME","NBUC")

MainOutcomesFam <- c("couple","NBENLEFA","NBENFCHA","NECHALOG","NBEN0A2C","TOPGRO")

IdVar <- c ("UniqueId","DTREFFRE","Senio","PE","nchild","strataXc","cohortid","cohort","Encouragement",
            "Caseworker's orientation", "SESIDummy","DateReRCT","Resampled",
            "Z","Z1","D","D1","D2","ZC5","DC5","PscoreZ","PscoreZ5","weightPS","principal_strata","AVISSESI")
TimeVar <- c("DATERANDOMIZE","timeToEvent","timeToEvent2","timeToEnd","PhasesReg","PhasesRegQ","time","timeToInvitation","timeToInvitationD","timeToC5","timeToInvitationC5" ,"timeToInvitationDC5")

Others <- c("Sexe", "AGE", "youngest", "oldest", "TPA", "AF","CF", "APL", "ASF", "AAH", "ARS","PAJE","NBEN0A2C","NBEN3A5C","DistReliance","Smic")

DBAnalysis <- Reliance %>% filter(!is.na(Z1) & cohort>0 & cohort<=4 & timeToEvent>=-13) %>% select(all_of(IdVar),all_of(TimeVar),all_of(MainOutcomes),all_of(SecOutcomes),all_of(Others),all_of(MainOutcomesFam)) %>% left_join(. 
                                                            ,B0EC %>% select(UniqueId,all_of(Covariates),School3,-TOPGRO)) %>% 
  mutate_at(vars("HHINC","LABORINCOME","INCOME","RUC","incomeRUC","HHLABORINCOME"),~ifelse(.x>quantile(.x,.999,na.rm=TRUE),quantile(.x,.999,na.rm=TRUE),.x)) %>% mutate(couple=ifelse(couple==TRUE,1,0)) %>% mutate(psscore=PscoreZ)



 BlocksToKeep <- DBAnalysis %>% ungroup() %>% filter(!is.na(Z1) & cohort>0 & timeToEvent==-1) %>% select(UniqueId,cohortid,strataXc,D1,Z1)  %>% group_by(cohortid,strataXc) %>% summarise(Z0=sum(Z1==0), Z1=sum(Z1),D1=sum(D1),n=n()) %>% filter(Z0>=2 & Z1>=2)

BlocksToDrop <- DBAnalysis %>% filter((strataXc %in% BlocksToKeep$strataXc)==FALSE)
 
 
DDBAnalysis <- DBAnalysis %>% filter(strataXc %in% BlocksToKeep$strataXc ) %>% mutate(#Z1.c=Z1-PscoreZ,weightZ=Z1/(1-PscoreZ)+(1-Z1)/(1-PscoreZ),
                                                                                      Z5=ifelse(ZC5==TRUE,1,0),
                                                                                      Z5=Z5-PscoreZ5) %>% 
   mutate(Groups=case_when(Z==FALSE & ZC5==FALSE~"Control",
                          Z==FALSE & ZC5==TRUE~"Late NT",
                          Z==TRUE & D==FALSE~"Never takers",
                          Z==FALSE & DC5==TRUE~"Late Cpliers",
                          D==TRUE~"Compliers")) %>% 
  mutate(NBEN0A2C=ifelse(as.numeric(NBEN0A2C)>0,1,0
                         ),
         TOPGRO=as.numeric(TOPGRO)) %>% 
mutate(  
  HHINC.Smic        =HHINC/Smic,
  LabInc.Smic       =LABORINCOME/Smic,
  INCOME.Smic       =INCOME/Smic,
  HHLABORINCOME.Smic=HHLABORINCOME/Smic,
  MTPRESVE.Smic     =MTPRESVE/Smic,
  MTPRESVE.NBUC.Smic=(MTPRESVE/NBUC)/Smic,
  incomeRUC.Smic    =incomeRUC/Smic,
  RUC.Smic          =RUC/Smic,
  )
#INCOME=MTOTMME1 ; HHINC=MTOTFOY1 ; HHLABORINCOME=MTACFOY1 ; LABORINCOME=MTACMME1


#filter( (DC5==TRUE & DTREFFRE>ymd(2022-11-01))==FALSE)

## Create Baseline with the same individuals you have in the main panel 

BaselineExperiment <- B0EC %>% filter(UniqueId %in% unique(DDBAnalysis$UniqueId))

## Create and replace existing propensity scores in the database with those computed on this final subset:

Mq.b <- feglm(Z1~strataXc,BaselineExperiment)

DDBAnalysis$PscoreZ <- predict(Mq.b,DDBAnalysis)

DDBAnalysis <- DDBAnalysis %>%  ungroup() %>% 
  mutate(Z1.c=Z1-PscoreZ,                                    weightZ=Z1/(PscoreZ)+(1-Z1)/(1-PscoreZ))  %>% mutate(Sum.q=sum((Z1/PscoreZ))+sum(((1-Z1)/(1-PscoreZ))),Norm.q=weightZ/Sum.q)  

# Norm.q.b=weightZ/sum(weightZ,na.rm=TRUE))

DDBAnalysis2 <- DBAnalysis

maxT4 <- max(DBAnalysis$timeToEvent[DBAnalysis$cohort==4])
maxT3 <- max(DBAnalysis$timeToEvent[DBAnalysis$cohort==3])

###### Database collapsed over the year after
# 
BeginPost <- 18



# this DB compute the mean incomes by months with positive labour income
PostDB0 <- DDBAnalysis %>%ungroup() %>%  filter(timeToEvent>=BeginPost & timeToEvent<=maxT4 & cohort<=4) %>% group_by(UniqueId) %>% summarise_at(vars("HHINC","LABORINCOME","INCOME","MTPRESVE","RUC","incomeRUC",HHLABORINCOME,HHINC.Smic,        
LabInc.Smic       ,
INCOME.Smic       ,
HHLABORINCOME.Smic,
MTPRESVE.Smic     ,
MTPRESVE.NBUC.Smic,
incomeRUC.Smic    ,
RUC.Smic          ),~sum(.,na.rm=TRUE)/max(1,sum(income_pos,na.rm = TRUE),na.rm=TRUE)) %>% 
  left_join(.,DDBAnalysis %>% filter(timeToEvent==-1)%>% select(all_of(IdVar),all_of(Others),all_of(Covariates)))


## This DB compute the sum of incomes over the period
PostDB <- DDBAnalysis %>%ungroup() %>%  filter(timeToEvent>=BeginPost & timeToEvent<=maxT4 & cohort<=4) %>% group_by(UniqueId) %>% summarise_at(vars("HHINC","LABORINCOME","INCOME","MTPRESVE","RUC","incomeRUC",HHLABORINCOME,HHINC.Smic,        
LabInc.Smic       ,
INCOME.Smic       ,
HHLABORINCOME.Smic,
MTPRESVE.Smic     ,
MTPRESVE.NBUC.Smic,
incomeRUC.Smic    ,
RUC.Smic          ),~max(0,sum(.,na.rm=TRUE),na.rm=TRUE)) %>% 
  left_join(.,DDBAnalysis %>% filter(timeToEvent==-1)%>% select(all_of(IdVar),all_of(Others),all_of(Covariates)))


# We create a database from the month of random assignment to max for cohort 4.

DB30 <- DDBAnalysis %>% filter(timeToEvent>=0 & cohort<=4 & timeToEvent<=maxT4) %>% arrange(UniqueId,timeToEvent) %>% group_by(UniqueId) %>% 
  mutate(EventCouple = ifelse(sum(couple,na.rm = TRUE)==0,0,min(timeToEvent[couple==1 & lag(couple,1)==0])),
          timeToCouple=timeToEvent-EventCouple,
         EventJob = ifelse(sum(income_pos,na.rm = TRUE)==0,0,min(timeToEvent[income_pos==1 & lag(income_pos,1)==0])),
         timeToJob=timeToEvent-EventJob,
         JobStart=ifelse(income_pos==1 &lag(income_pos,1)==0,
                         timeToEvent,0),
       #  jobStart2=ifelse(lead(income_pos,1)==1 &income_pos==1& lag(JobStart)!=0,lag(JobStart),JobStart),
         JobEnd=ifelse(income_pos==0 & lag(income_pos,1)==1,timeToEvent,0),
       BunchPos=case_when(HHINC==0~"No wage",
                          HHINC<Smic/5 ~"1/5 MW",
             Smic/5  <=HHINC&HHINC<Smic*2/5~"2/5 MW",
             Smic*2/5<=HHINC&HHINC<Smic*3/5~"3/5 MW",
             Smic*3/5<=HHINC&HHINC<Smic*4/5~"4/5 MW",
             Smic*4/5<=HHINC&HHINC<Smic    ~"MW",
             Smic    <=HHINC&HHINC<Smic*6/5~"1.2 MW",
             Smic*6/5<=HHINC&HHINC<Smic*7/5~"1.4 MW",
             Smic*7/5<=HHINC&HHINC<Smic*8/5~"1.6 MW",
             Smic*8/5<=HHINC&HHINC<Smic*9/5~"1.8 MW",
             Smic*9/5<=HHINC&HHINC<Smic*2~"2 MW",
             TRUE~"Above 2MW"),
       BunchPos=factor(BunchPos,levels=c("No wage","1/5 MW","2/5 MW","3/5 MW","4/5 MW","MW","1.2 MW",
"1.4 MW",
"1.6 MW",
"1.8 MW","2 MW","Above 2MW"))) %>% ungroup() %>% mutate(Bin.HHINC.Smic=cut_width(ifelse(HHINC.Smic<=2,HHINC.Smic,2),width=.05,boundary = 1,na.rm=TRUE,closed="right"),
       Bin.LabInc.Smic=cut_width(ifelse(LabInc.Smic<=2,LabInc.Smic,2),boundary = 1,width=.05,na.rm=TRUE,closed="right")) %>% group_by(UniqueId) %>% mutate(
       Buncher=ifelse(Bin.HHINC.Smic=="(0.5,0.55]"|Bin.HHINC.Smic=="(0.5,0.55]",1,0),
       EventBunch=ifelse(sum(Buncher,na.rm = TRUE)==0,0,min(timeToEvent[Buncher==1 & lag(Buncher)==0])),
       TimeToBunch=timeToEvent-EventBunch
       ) %>% ungroup()
                          
                          
  




