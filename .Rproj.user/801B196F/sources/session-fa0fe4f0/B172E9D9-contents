\begin{frame}[shrink]
\frametitle{Des effets transitoires et opposé sur ASF et pensions alimentaires pour les familles de 2 enfants}
\label{GraphASF}
<<EffetASF, cache=TRUE,fig.align='t',fig.cap="Effets du programme sur l'ASF et les pensions alimentaires", out.width='.5\\textwidth', fig.asp=1>>=



NBENFCHA <- feols(c(ASF-B0_ASF,TPA-B0_TPA)~0+i(timeToEvent,Z:nchild,ref=-13),DDBAnalysis %>% filter(timeToEvent<=maxT4 & cohort<=4),cluster = ~strataXc,weight=~weightZ)

NBENFCHAnchild <- modelplot(NBENFCHA,draw=FALSE) %>% mutate(term=str_remove_all(term,"timeToEvent::|Z:nchild::")) %>% separate(term,c("timeToEvent","Z","sample"),sep=":") %>%mutate(timeToEvent=as.numeric(timeToEvent)) %>% 
 #mutate(model=str_remove_all(model,"lhs: "))
 mutate(model=case_when(str_detect(model,"ASF")~"Pr(Family support allowance)",
                        str_detect(model,"TPA")~"Pr(Child support)",
                        str_detect(model,"AF")~"Family benefits",
                        str_detect(model,"APL")~"Housing benefits",
                        str_detect(model,"TOPGRO")~"Pr(Pregnancy)",
                        ))
NBENFCHAnchild %>% filter(sample==2) %>% ggplot()+
  geom_rect(data = DatesC1C4,
            aes(xmin = TimeToStart, xmax = TimeToEnd, ymin = -Inf, ymax = Inf),
            fill = cbPalette[c(2)], alpha = 0.05)+ #Traning period
  geom_pointrange(aes(x=timeToEvent,y=estimate,ymin=conf.low,ymax=conf.high,color=Z,shape=Z),position = position_dodge(.7),size=.3)+#facet_grid(cols=vars(sample),rows = vars(model),scales = "free")
  facet_wrap_paginate(~model,scales = "free",ncol = 2)+
  geom_vline(data=DatesC1C4 ,
             aes(xintercept = -0.5),linetype="dashed")+
  geom_hline(data=DatesC1C4 ,
             aes(yintercept = 0),linetype="longdash")+
  scale_x_continuous("Months from/since randomisation",n.breaks=15)+
    scale_color_manual("RCT group:",values =ColorZ,labels=c("Control","Encouragement"))+
  scale_shape_manual("RCT group:",values =c(2,1),labels=c("Control","Encouragement"))+
  labs(title="Long difference in the probability of receiving child support \nor family support allowance ",
       subtitle="Subsample : 2 children at baseline",
       caption = paste("Sources: ALLSTAT ",min(Reliance$DTREFFRE), "to", max(Reliance$DTREFFRE)," cohorts 2018 to 2021 from -12 to ",maxT4," months from random assignment.
Means and point-wise 95% confidence intervals estimated by OLS regressions on month x group x encouragement dummies
without intercept, using cluster-robust standard errors adjusted at the block x cohort level and
inverse instrument propensity score weighting.
Rows correspond to different outcomes from separate regressions. Columns display results by number of children at baseline.
"))
