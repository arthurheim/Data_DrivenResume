%   \end{block}
% }



\frame{\frametitle{Méthodologie}
\begin{block}{Hypothèses d'identification}
\begin{enumerate}\scriptsize
\item \label{randomSampling} {\bf Random sampling: $\forall c$, the sample $\{Y^k_{ic},Y^k_{ic+1},\dots,Y^k_{i\mathcal{T}-c},\symbf{B_c},Z_{ic},D_{ic} \}_{i=1}^{I_c}$ is independent and identically distributed ($iid$)}
\item \label{OneSided} \bf{One-sided non-compliance:} $Pr(D(0)|Z=0)=1$
\item \label{FirstStage} \bf{Meaningful first stage:} $Pr(D(1)|Z=1)>0$
\item \label{Indep} \bf{Conditional independence and exclusion:} $Y^k(0)\perp Z|\mathbf{B}=b_{jc}\quad\forall\text{ } b_{jc} \text{ where }Pr(D=1|\mathbf{B}=b_{jc})>0$
\item \label{Support} \bf{Common support:} $f_{Z|B}(Z=0|\mathbf{B}=b_{jc})>0 \quad\forall\text{ } b_{jc} \text{ where }Pr(D=1|\mathbf{B}=b_{jc})>0$
\end{enumerate}
\scriptsize
Under these hypotheses, the average treatment effect on the treated is identified \citep{FrolichMelly2013a}:

\begin{equation}\label{eq:ATT}
\begin{aligned}
ATT&=&\esp{Y^k(1)-Y^k(0)|D=1}\\
&=&\frac{\esp{Y^k|Z=1,\symbfup{B}}-\esp{Y^k|Z=0,\symbfup{B}}}{\esp{D|Z=1,\symbfup{B}}-\esp{D|Z=0,\symbfup{B}}}\\
&=&\frac{1}{Pr(D=1)}\int \esp{Y^k(1)-Y^k(0)|\symbfup{B},D=1}Pr(D=1|\symbfup{B})dF_B
\end{aligned}
\end{equation}

\hyperlink{Intuition}{\beamergotobutton{Retour méthodologie}}
\end{block}

}

\subsection{Méthodologie}

\frame{\frametitle{Méthodologie}
\begin{block}{Identification des distributions potentielles}
\begin{itemize}\scriptsize
\item Under the same set of hypotheses, the average missing potential outcome for the treated is identified and, in fact, so is any measurable function $g(\cdot)$ of that potential outcome, as long as $g(\cdot)$ has finite first moment. Formally:

\begin{equation}\label{eq:E(Y0)}
\esp{g\big(Y^k(0)\big)|D=1}=\frac{\int \esp{g\big(Y^k(0)\big)|\symbfup{B}=b,Z=0}dF_B(b)-\esp{g\big(Y^k(0)\big)\times(1-D)}}{Pr(D=1)}
\end{equation}

\item Under the identification hypothesis \citet{FrolichMelly2013a} show that with one-sided non compliance: 
\begin{equation}
\begin{aligned}
\esp{g(\big(Y(0)|D=1\big)}&=&\frac{1}{Pr(D=1)}\espb{g(Y)\times(1-D)\frac{Pr(Z=1|\symbfup{B})-Z}{Pr(Z=1|\symbfup{B})\left(1-Pr(Z=1|\symbfup{B})\right)}}\\
&=&\frac{1}{Pr(D=1)}\espb{g(Y)\times(1-D)\frac{-\tilde{Z}}{q_b\left(1-q_b\right)}}
\end{aligned}
\end{equation}

\begin{equation}
\begin{aligned}
\esp{g(\big(Y(1)|D=1\big)}&=&\frac{1}{Pr(D=1)}\espb{g(Y)\times(D)\frac{Z-Pr(Z=1|\symbfup{B})}{Pr(Z=1|\symbfup{B})\left(1-Pr(Z=1|\symbfup{B})\right)}}\\
&=&\frac{1}{Pr(D=1)}\espb{g(Y)\times(D)\frac{\tilde{Z}}{q_b\left(1-q_b\right)}}
\end{aligned}
\end{equation}

\end{itemize}
\hyperlink{Intuition}{\beamergotobutton{Retour méthodologie}}
\end{block}


}



\begin{frame}
\frametitle{Heterogeneous treatment effects}
\begin{block}{Estimation par TSLS saturées} \label{TSLS}
\begin{itemize}\scriptsize
\item We want to identify the effect of the programme on participants with different baseline characteristics; number of children in particular.

\item Because this variable is part of those defining blocks, the conditional treatment effects on participants is simply identified over the subset of blocks whose participants have the characteristic of interest.

\item To simultaneously estimate the models by groups of family size $\times$ period, we estimate the following equations by TSLS:

\begin{align}\label{eq:GH1stStack2}
\begin{cases}
Y_{ibm}=&\sum_s \beta_{bs} S_s(m) \mathbf{B}'+\sum_s\sum_f  \delta_{sf}\mathbf{B_f}^\prime D_{ib}S_s(m)+\mu_{ibm} \\
\mathbf{B_f}^\prime D_{ib}S_s(m)=&\sum_s\alpha_{bs}\mathbf{B}'S_s(m)+ \sum_s\sum_f \pi_{sb}\mathbf{B_f}^\prime \tilde{Z}_{ib}S_s(m)+\epsilon_{ibm}
\end{cases}
\end{align}
\end{itemize}
\hyperlink{Intuition}{\beamergotobutton{Retour méthodologie}}
\end{block}


\end{frame}




