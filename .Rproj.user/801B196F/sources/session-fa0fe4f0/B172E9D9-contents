# Regression before random assignment
Basic0 <- feols(income_pos~    # Outcome
                 i(timeToEvent,Z1.c,ref=-1)|        # interaction of time-to-event and treatment
                 strataXc^timeToEvent2,           # block x cohort x relative time fixed effects
               DDBAnalysis %>% filter(cohort<=4 & timeToEvent>=-12 & timeToEvent <=-1),
               panel.id = c("UniqueId","DTREFFRE"),
               cluster =~strataXc,                # Cluster robust SE at the block x cohort level
               weight=~weightZ
)

Basic1 <- feols(income_pos~    
                 i(timeToEvent,Z1.c,ref=-1)|        
                 strataXc^timeToEvent2,           
               DDBAnalysis %>% filter(cohort<=4 & timeToEvent>=-1 & timeToEvent <=maxT4) ,
               panel.id = c("UniqueId","DTREFFRE"),
               cluster =~strataXc,weight=~weightZ
)

ITTincomePosNoCov <- MultCIEStudy(Basic0,Basic1,IV=FALSE)


Pooled0 <- feols(income_pos~
                  i(timeToEvent,Z1.c,ref=-1)+
                  timeToEvent2:(SESIDummy+B0_income_pos+School3+B0_French+QAGE+B0_TPA+B0_APL+B0_ASF+QBRUC+QYMTBRU+B0_NBEN3A5C+B0_Share16+B0_NBEN0A2C+Resampled+ZC5)|                   # Constant
                  strataXc^timeToEvent2,           # trimester specific instrument
                DDBAnalysis %>% filter(cohort<=4 & timeToEvent>=-12 & timeToEvent <=-1),
                panel.id = c("UniqueId","DTREFFRE"),
                cluster =~strataXc,weight=~weightZ,
)

