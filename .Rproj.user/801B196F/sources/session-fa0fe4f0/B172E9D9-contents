\section{Appendices}


\subsection{Littérature: \emph{Welfare-to-work} et familles monoparentales}

\frame{\frametitle{\insertsubsection}
\begin{alertblock}{Brève définition de l'investissement social}
\begin{itemize}
\item[\faBalanceScaleRight] Cadre conceptuel liant théories de la justice social inspiré des {\bf \emph{capabilities}} d'Amartya {\bf Sen}, du capital humain et de l'intervention publique.
\item[\faBriefcaseMedical] Politiques visant à {\bf utiliser, préserver, et maintenir} le \underline{capital humain}
%\item Activation avec des "amortisseurs sociaux" (\emph{buffers}) \citep{HemerijckHuguenot-Noel2022,Hemerijck2014}
\end{itemize}
\end{alertblock}
\begin{exampleblock}{Pourquoi l'investissement social ?}
\begin{itemize}
\item[\faChartLine] Changements profonds dans les sociétés et émergence de nouveaux risques sociaux plus déterministes 
\item[\faDirections] Nouvelles politiques (ou re-labélisation$\dots$)
\item[\faDollarSign] Dépense sociale productive: on s’attend à un "\emph{rendement social}"
\item[\faChartBar] Rôle crucial de l'évaluation des politiques publiques \citep{FougereHeim2019}
\end{itemize}
\end{exampleblock}
}


\frame{\frametitle{Hausse des familles monoparentales, baisse du taux d'emploi, hausse de la pauvreté monétaire}
\begin{columns}[t]
\begin{column}{.28\textwidth}

\begin{block}{Travaux récents sur données françaises}\label{GeneralPlot}
\begin{itemize}\tiny
  \item État des savoirs \citep{LePapeHelfter2023}
  \item Monoparentalité et pauvreté des enfants \citep{BonnetEtAl2024,BonnetSolaz2023,LeForner2023,LeForner2020}
  \item Effets des séparations \citep{BonnetEtAl2022,BonnetEtAl2021,FerrariEtAl2019,Costemalle2017}
  \item Nombreuses publications d'Hélène Périvier et co-auteur$\cdot$ices.
\end{itemize}
\end{block}
\hyperlink{GeneralStat}{\beamergotobutton{Retour motivations}}

\end{column}

\begin{column}{.7\textwidth}

<<MonoFR, fig.cap="Comparaison internationale d'après \\citet{NieuwenhuisMaldonado2018}",out.width='.98\\textwidth'>>=
#path <- here()
knitr::include_graphics(here('Presentations','figure','PlotsGeneral.png'),error=FALSE)
@

\end{column}
\end{columns}
}


\frame{\frametitle{\insertsubsection}
\label{LitWelfareToWork}
\begin{block}{Les ALMP affectent négativement et fortement les familles monoparentales}
\begin{itemize}\scriptsize
\item \citet{MogstadPronzato2012} et \citet{JohnsenReiso2020} montrent que montrent que la réforme de l'aide sociale en Norvège a {\bf doublé le taux de pauvreté} et \citet{LokenEtAl2018} montrent un impact négatif sur les résultats scolaires des enfants concernés.
\item \citet{AvramEtAl2018} montrent qu'au Royaume-Uni, les réformes Welfare-to-work ont incité certains parents isolés à travailler, tout en poussant d'autres à se tourner vers les prestations d'invalidité ou le chômage non indemnisé.
\item \citet{Cook2012} montre que le programme Welfare-to-work déplace la dépendance des femmes de l'État vers la famille et les amis, dont beaucoup se trouvent dans des situations de pauvreté similaires et/ou ne sont pas en mesure de fournir un soutien adéquat.
\item \citet{BradyCook2015} synthétisent la littérature sur l'effet d'une réforme de l'aide sociale au travail en Australie et montrent qu'elle a diminué le bien-être financier des parents isolés et de leurs enfants, ce qui a eu pour conséquence que les parents passant de l'aide sociale au travail se sont sentis moins satisfaits de leur sécurité future et de leur niveau de vie, et ont enregistré des taux de pauvreté plus élevés.
\item La revue systématique Cochrane de \citet{GibsonEtAl2018} ne signale pratiquement aucun effet sur l'emploi et le revenu, aucun effet sur la santé mentale et même lorsque l'emploi et le revenu étaient plus élevés pour les parents isolés dans le cadre du WtW, la plupart des participants continuaient d'être pauvres.
\end{itemize}
\hyperlink{Intuition}{\beamergotobutton{Retour méthodologie}}
\end{block}
}


\subsection{Contenu de l'intervention et effets attendus}

\frame{\frametitle{\insertsubsection}
\begin{block}{Un accompagnement global qui se veut \emph{capacitant} et \emph{emancipant}} \label{EffetsAttendus}
\begin{enumerate}\footnotesize
  \item Accès aux droits, mobilisation d'aides nationales et territoriales
  \item Diagnostic des problèmes principaux de la famille (sur-endettement, logement, santé, éducation des enfants,...) et des leviers d'action
  \begin{itemize}\scriptsize
        \item[$\rightarrow$] {\bf Réduire la charge mentale qui affecte leurs capabilités (\emph{mental bandwidth})} \citep{ManiEtAl2013a, SchilbachEtAl2016}
        \end{itemize}
 \item Construire et valider un projet professionnel réaliste et travailler sur les étapes permettant d'atteindre cet objectif (formation, stages, permis de conduire, etc.)
 \begin{itemize}\scriptsize
        \item[$\rightarrow$] {\bf Améliorer l'efficacité de la recherche d'emploi et l'adéquation des jobs} \citep{BurdettVishwanath1988}
        \end{itemize}
        \item Accompagnement individuel et en groupe visant à développer l'estime de soi, les interactions sociales, travailler sur le lien parent enfant...
        \begin{itemize}\scriptsize
        \item[$\rightarrow$] {\bf Permettre des adaptations} (oser plus, croire en soi) et {\bf mieux connaître ses forces et faiblesses, le marché du travail} (biais dans les croyances de chances d'emploi, de rareté des offres, de salaire de réserve) \citep{Arni2015}
        \end{itemize}
\end{enumerate}
\end{block}
\hyperlink{Reliance}{\beamergotobutton{Retour Reliance}}
}



\subsection{Protocole de recherche}

\frame[shrink]{\frametitle{\insertsubsection}
\label{Design}
\begin{exampleblock}{Échantillonage et pré-selection}
\begin{enumerate}
\item Tirage aléatoire ($\approx$ 500/an) dans les bases du département parmi la population éligible
\item Classement des dossiers par le STI: $\approx$ 1/5 exclu car déjà engagé, en emploi etc.
\item Echantillon expérimental composé des avis "favorable" ou "réservé"
\end{enumerate}
\end{exampleblock}
\begin{alertblock}{\emph{'Block-randomised encouragement design'}}
\begin{enumerate}
\item Tirage aléatoire stratifié
\begin{itemize}\footnotesize
\item Inscription à pôle emploi (oui/non)
\item Nombre d'enfants à charge (1,2, 3+)
\item Ancienneté au RSA (2 à 5 ans, 5 à 10 ans, 10 ans ou plus)
\end{itemize}
\item Groupe encouragement invité à des séances d'information et signature de contrat d'insertion
\item Groupe de contrôle dans le droit commun
\end{enumerate}
\end{alertblock}
}


\frame[shrink]{\frametitle{\insertsubsection}
\begin{columns}[t]
  \begin{column}{.29\textwidth}
    \begin{block}{Un design échelonné (\emph{staggered})}
      \begin{itemize}\scriptsize
        \item Tirage au sort chaque année et durée de recrutement variable
        \item Économie et marché du travail différent d'une cohorte à l'autre
      \end{itemize}
      \end{block}
\begin{alertblock}{Une période marquée}
\begin{itemize}\scriptsize
\item Janvier 2019: réforme de la prime d'activité suite au mouvement des gilets jaune
\item Mars 2020-Juin 2021: pandémie de Covid-19
\item Réformes successives du marché du travail
\end{itemize}
\end{alertblock}
\end{column}

