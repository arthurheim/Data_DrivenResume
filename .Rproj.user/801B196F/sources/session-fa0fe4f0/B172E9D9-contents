outcomes <- ggplot()+
  geom_rect(data = DatesC1C4,
            aes(xmin = TimeToStart, xmax = TimeToEnd, ymin = -Inf, ymax = Inf),
            fill = cbPalette[c(2)], alpha = 0.05)+ #Traning period
  geom_label(aes(x=9,y=.25),fill="DarkBlue",color=palette_lgbtq('bisexual')[c(3)],alpha=.2,label="programme \nimplementation",family = "Times New Roman",size=3)+
  #First we compute the mean and SE
  stat_summary(data=DBAnalysis %>% filter(cohort<=4 & timeToEvent>=-13 & timeToEvent<=maxT4) %>% mutate(timeToEvent=timeToEvent+.4*(Z1)-.2,panel="Outcomes",group="Group:"),
               aes(y=income_pos,x=timeToEvent,color=Encouragement,shape=Encouragement),size=.2,
               fun.data = "mean_se",fun.args = list(mult = qnorm(.975)),#95% CI
               position=position_nudge(x = 0.1)) +
  geom_smooth(data=DBAnalysis %>% filter(cohort<=4 & timeToEvent>=-13 & timeToEvent<=maxT4) %>% mutate(timeToEvent=timeToEvent+.4*(Z1)-.2,panel="Outcomes",group="Group:"),
              aes(y=income_pos,x=timeToEvent,color=Encouragement),
              se=FALSE,method = "lm_robust",formula = y ~ splines::bs(x, df=round(length(unique(DBAnalysis$DTREFFRE))/6)))+
  geom_vline(data=DatesC1C4 ,
             aes(xintercept = -0.5),linetype="dashed")+facet_wrap(~panel,scales = "free_y")+
  scale_x_continuous("Months from/since randomisation",n.breaks=15)+ylab(TeX("$Pr$(labour income >0)"))+theme(legend.position = "right")+
    scale_color_manual("RCT group:",values =ColorZ)+
    scale_shape_manual("RCT group:",values = c(1:2))+
    labs(title="Change in employment")


