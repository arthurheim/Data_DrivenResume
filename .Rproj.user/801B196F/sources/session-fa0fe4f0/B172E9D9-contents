# make the plot with formatting
plot <- ggplot(FullResultsIndiv)+geom_hline(yintercept = 0,linetype=2)+   
  # geom_line(data=FullResultsIndiv %>% filter(is.na(CashScaled)==FALSE),
  #          aes(x=grid*100,y=CashScaled,linetype="Amount of PA+\nhousing benefits"),color="red")+
  geom_ribbon(data=edifisScaled,aes(x=grid*100,ymax=CashScaled,ymin=ALScaled,fill="In-work benefits",color="In-work benefits"),alpha=.1)+
  geom_vline(
    aes(xintercept = .50*100,linetype="50% MW"))+
  geom_vline(aes(xintercept = .59*100, linetype="Kink point"))+
  geom_vline(
    aes(xintercept = 100,linetype="Full-time MW"))+
  geom_line(
    aes(x=grid*100,y=f_p,color=PO))+
  geom_ribbon(
    aes(x=grid*100,ymin=CI_l_q,ymax=CI_r_q,fill=PO),alpha=.2)+
  geom_pointrange(
    aes(x=grid*100,y=f_p,ymin=CI_l_p,ymax=CI_r_p,color=PO),alpha=.2)+
  ylab("Scales densities")+xlab("Income bins (share of full-time minimum wage)")+
  scale_linetype_manual("References",values=c(1,2,4,6,8))+
  scale_fill_manual("Legend:",values=c(ColorD2[c(1,3)],cbbPalette[2]),labels=c("PO untreated compliers","PO treated compliers","In-work benefits"))+
  scale_color_manual("Legend:",values=c(ColorD2[c(1,3)],cbbPalette[2]),labels=c("PO untreated compliers","PO treated compliers","In-work benefits"))+
  # scale_color_manual(labels=lapply(sprintf(r'($f_y(Y(%d)|D(1))$)', c(0,1)), TeX),values=ColorD2[c(1,3)])+ 
  #scale_fill_manual(labels=lapply(sprintf(r'($f_y(Y(%d)|D(1))$)', c(0,1)), TeX),values=c(ColorD2[c(1,3)],cbbPalette[1]))+ 
  facet_wrap(~Sample,scales = "free_y")+
  Maintheme+
  labs(title="Non-parametric data driven estimation of compliers' counterfactual densities",
       subtitle="Weighted local regression distribution estimates, Kappa weighting",
       caption=paste("Sources: ALLSTAT, observations from ", BeginPost," to ", maxT4,"months since random assignment.
The dependent variable is the individual's labour income as share of full-time minimum wage.
The shaded area above the estimates is the scaled amount of in-work benefits with housing benefits adjusting.
These data are simulated using EDIFIS and rescaled for each panel using the width of the density support.
Notes: Estimations of the potential density functions for compliers following Cattaneo et al. (2021), using the R package 'lpdensity'.
Bandwidth chosen using regularised integrated MSE-optimal and the Epanechnikov kernel function. 
Instrument propensity scores estimated by probit of encouragement on block fixed effects to smooth support.
Densities use local polynomial regressions of order ", pSmooth,", simultaneous 95% confidence intervals use polynomial of order ",qSmooth,",
",qSmooth-pSmooth,"degree higher for biais correction.
Densities are scaled over the support of potential income with positive values. The counterfactual probability of
reporting 0 income is estimated by TSLS with block fixed effects using T x 1(Y<.000001) as outcome and d instrumented by
the re-centred instrument and block fixed effect, with T = D for Y(1) and T=(1-D) for Y(0)."))+
  guides(linetype=guide_legend(ncol=2),
         fill=guide_legend(ncol=2),
         color=guide_legend(ncol=2))


# now add the title
plot_row <- plot_grid(plot,
                      ncol=1,
                      align="h")


title <- ggdraw() +
  draw_label(
    "Distribution of potential individual's labour incomes of treated and untreated compliers",
    fontface = 'bold', 
    fontfamily="Times New Roman"
    #x = 0,
    #hjust = 0
  )


combine <- plot_grid(
  title, plot_row,
  ncol = 1,
  # rel_heights values control vertical title margins
  rel_heights = c(0.2, 1)
)
#plot_row
FinalPlot <- ggdraw(add_sub(plot_row,
                            TeX(r'(Weights are computed for each sub-group separately: $\kappa_0=\frac{1}{1-D_i}\frac{1-Z_i-(1-\hat{q}_b)}{\hat{q}_b(1-\hat{q}_b)}$   $\kappa_1=\frac{1}{D_i}\frac{Z_i-\hat{q}_b}{\hat{q}_b(1-\hat{q}_b)}$)'),
                            size=10,hjust=0,x=.1,y=1,fontfamily="Times New Roman"))+Maintheme


FinalPlot

#zstar + (beta*binwidth)
# Sharp bunching
EBunchNP <- BunchFull$DataFrame %>% pivot_wider(id_cols=c("grid","p","q"),names_from = "PO",values_from = c("f_p","f_q","CI_l_p","CI_r_p","CI_l_q","CI_r_q")) %>%
  mutate(DZ=((f_p_1-f_p_0)/f_p_0),
         ##DZ=(f_p_1/f_p_0),
         Dz_Over_zstar=DZ/.6) %>% mutate(grid=grid*100) %>% mutate(Bins=case_when(grid <40                ~"Earned income bin:[0;40[",
                                                                                  grid >=40 & grid <50           ~"Earned income bin:[40;49[",
                                                                                  grid >=50 & grid <60           ~"Earned income bin:[50;60[",
                                                                                  grid >=60 & grid <80           ~"Earned income bin:[60;80[",
                                                                                  grid >=80 & grid <100          ~"Earned income bin:[80;100[",
                                                                                  grid >=100 &grid <110         ~"Earned income bin:[100;110[",
                                                                                  grid >=110 &grid <120         ~"Earned income bin:[110;120[",
                                                                                  grid >=120 &grid <150         ~"Earned income bin:[120;150["))

tomatch <- AverageSingle %>% pivot_longer(-c(couple,ref),names_to = "Bins",values_to = "Timi")
EBunchNP <- left_join(EBunchNP,tomatch) %>% mutate(dt=Timi-lag(Timi),tau_a=lag(Timi),e=log(1+Dz_Over_zstar)/log(1-(dt/(1-tau_a))),enp=Dz_Over_zstar/(dt/(1-tau_a)))

# the previous elasticity is only at the bunching region.
# Elasticities: 
#1 identify bunching zone from excluding point estimate of Z1 from CI large Z0. 
# We want to integrate over the bunching zone \sum_b(fb(1)-fb(y0))/fb(y(0)).
# Y* 
# 


EBunchNP2 <- BunchFull$DataFrame %>% pivot_wider(id_cols=c("grid","p","q"),names_from = "PO",values_from = c("f_p","f_q","CI_l_p","CI_r_p","CI_l_q","CI_r_q")) %>%
  mutate(DZ=((f_p_1-f_p_0)/f_p_0),
         ##DZ=(f_p_1/f_p_0),
         Dz_Over_zstar=DZ/.6) %>% mutate(grid=grid*100) %>% 
  
  mutate(Bins=case_when(grid <40                ~"Earned income bin:[0;40[",
                        grid >=40 & grid <50           ~"Earned income bin:[40;49[",
                        grid >=50 & grid <60           ~"Earned income bin:[50;60[",
                        grid >=60 & grid <80           ~"Earned income bin:[60;80[",
                        grid >=80 & grid <100          ~"Earned income bin:[80;100[",
                        grid >=100 &grid <110         ~"Earned income bin:[100;110[",
                        grid >=110 &grid <120         ~"Earned income bin:[110;120[",
                        grid >=120 &grid <150         ~"Earned income bin:[120;150["))

tomatch <- AverageSingle %>% pivot_longer(-c(couple,ref),names_to = "Bins",values_to = "Timi")
EBunchNP2 <- left_join(EBunchNP,tomatch) 

LargeE <- EBunchNP2%>%
  mutate(bunchingZone=(CI_r_p_0<f_q_1),
         Dz=sum(DZ*as.numeric(bunchingZone)),
         Dz_Over_zstar=Dz/.60
  ) %>% filter(grid >56 & grid<64) %>% 
  mutate(enp=log(1+Dz_Over_zstar)/log(1-(dt/(1-tau_a))))







eNP <- EBunchNP %>% filter(Bins=="Earned income bin:[60;80[" & dt!=0) %>% summarise(e=e) %>% as.numeric()
dtnp=  EBunchNP %>% filter(Bins=="Earned income bin:[60;80[" & dt!=0) %>% summarise(dt=dt) %>% as.numeric()
Bnp <- EBunchNP %>% filter(Bins=="Earned income bin:[60;80[" & dt!=0) %>% summarise(DZ=DZ) %>% as.numeric()
#$e[test$Bins=="Earned income bin:[60;80["]

Blarge <- LargeE$Dz
Blarge.zstar <- LargeE$Dz_Over_zstar
eLarge=LargeE$enp
