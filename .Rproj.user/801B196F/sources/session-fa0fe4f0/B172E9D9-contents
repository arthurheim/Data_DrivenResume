# E(Y1)

IVDIDY1 <- feols(D1*(RUC)~1|timeToEvent^strataXc|D1:timeToJob~Z1.c:timeToJob,DB30%>% filter(timeToJob>=-12 & timeToJob<=12) %>% mutate(timeToJob=factor(timeToJob,exclude=c(-1)),D0=ifelse(D==FALSE,1,0)),cluster=~strataXc) 

# Check OLS
IVDIDY1b <- feols((RUC)~0+i(timeToJob),DB30%>% filter(timeToJob>=-12 & timeToJob<=12), #%>% mutate(timeToJob=factor(timeToJob,exclude=c(-1,-12)),D0=ifelse(D==FALSE,1,0)),
                  cluster=~strataXc) 

# # get results in a DF
 Y1 <- modelplot(list("OLS"=IVDIDY1b,"TSLS"=IVDIDY1),draw=FALSE) %>% mutate(term=str_remove_all(term,"fit_D1:|timeToJob|::") %>% as.numeric(.))%>% mutate(Panel="Average potential outcomes")%>% mutate(Y="PO Y(1): treated compliers") %>% rename(point.conf.low=conf.low,point.conf.high=conf.high)


# DO Y0
IVDIDY0 <- feols(D0*(RUC)~1|timeToEvent^strataXc|D0:timeToJob~Z1.c:timeToJob,DB30%>% filter(timeToJob>=-12 & timeToJob<=12) %>% mutate(timeToJob=factor(timeToJob,exclude=c(-1)),D0=ifelse(D==FALSE,1,0)),cluster=~strataXc) 

